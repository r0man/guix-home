{
  "env": {
    "DISABLE_AUTOUPDATER": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "includeCoAuthoredBy": false,
  "model": "opus",
  "permissions": {
    "allow": [
      "Bash(guix:*)"
    ],
    "deny": [
      "Read(~/.authinfo)",
      "Read(~/.authinfo.gpg)",
      "Read(~/.aws/**)",
      "Read(~/.password-store/**)",
      "Read(~/Mail/**)"
    ]
  }
}
